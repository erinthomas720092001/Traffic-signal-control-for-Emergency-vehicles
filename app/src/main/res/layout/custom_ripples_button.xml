            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="0dp" />

            <com.project.boatnavigation.customview.button.PaperButton
                android:id="@+id/paper_button"
                widget:paper_text=""
widget:paper_shadow_radius="5"
                widget:paper_shadow_offset_x="6"
                widget:paper_shadow_offset_y="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.project.boatnavigation.customview.textview.RipplesButtonTextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textSize="@dimen/ripple_button_text_size" />

            <com.project.boatnavigation.customview.button.RippleView


                android:id="@+id/rippleView"
                rv_centered="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.project.boatnavigation.customview.button.RippleView>

        </RelativeLayout>
